<!DOCTYPE html>
<html>
  <head>
    <title>Coastal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
<!-- Navbar -->
<div>
  <nav class="navbar  navbar-expand-lg bg-dark p-md-3">
      <div class="container text-black">
        <a class="logo" href="/">Coastal</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <div class="mx-auto"></div>
          <ul class="navbar-nav">
            <%= link_to "Our Boats", boats_path, class: "nav-item nav-link" %>
            <%= link_to "List your boat", new_boat_url, class: "nav-item nav-link" %>
            <% if !user_signed_in? %>
              <%= link_to "Sign up", new_user_registration_url, class: "nav-item nav-link" %>
              <%= link_to "Sign in", new_user_session_url, class: "nav-item nav-link" %>
            <% else %>
              <p class="nav-item nav-link">
              <%= link_to "#{current_user.first_name} #{current_user.last_name}", user_profile_url(current_user) %></p>
              <%= cl_image_tag current_user.avatar.key, height: 500, width: 500, crop: :fill, class: "user-avatar"%>
              <%= link_to "Log Out",  destroy_user_session_path, method: :delete, class: "nav-item nav-link" %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
</div>
    <%= yield %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
  </body>
</html>
