<div class="featured-boats">
  <div class="boat-cards">
    <% @boats.each  do |boat| %>
      <a href="<%=boat_path(boat)%>">
        <div class="card" >
          <%=cl_image_tag boat.images[0].key, crop: :fill %>
          <div class="card-body">
            <h3 class="card-title"><%=boat.title%> </h3>
            <p class="card-body"><%=  boat.description %></p>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>
